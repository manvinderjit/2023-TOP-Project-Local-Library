<%- include('./partials/header'); -%>

    <h1>Tile: <%= book.title %></h1>    
    <p>
        <strong>Author:</strong><a href=<%= book.author.url %> ><%= book.author.name %></a>
    </p>
    <p>
        <strong>Summary:</strong><%= book.summary %>
    </p>
    <p>
        <strong>ISBN:</strong><%= book.isbn %>
    </p>
    <p>
        <strong>Genre:</strong>
        <% for(let i = 0; i < book.genre.length; i++ ) { console.log(book.genre[i])%>
            <a href= <%= book.genre[i].url %>><%= book.genre[i].name %></a>
            <% if (i < book.genre.length - 1) { %>
                , 
            <% }; %>
        <% }; %>
    </p>   
    <div style='margin-left:20px;margin-top:20px'>
        <h4>Copies</h4>
        <ul>
            <% for (const val of book_instances) { %>
                <hr>
                <% if (val.status=='Available') { %>
                    <p class="text-success"> <%= val.status %> </p>
                <% } else if (val.status=='Maintenance') { %>
                    <p class="text-danger"><%= val.status %></p>
                <% } else { %>
                    <p class="text-warning"><%= val.status %></p>
                <% }; %>
                <p><strong>Imprint:</strong><%= val.imprint %></p>
                <% if (val.status!='Available') { %>
                    <p><strong>Due back:</strong><%= val.due_back %></p>
                <% }; %>        
                <p><strong>Id:</strong><a href=<%= val.url %> > <%= val._id %></a></p>
            <% }; %>        
        </ul>
    </div>
    <hr>
    <p>
        <a href="<%= book.url %>/update">Update Book</a>
    </p>
    <p>
        <a href="<%= book.url %>/delete">Delete Book</a>
    </p>
    
<%- include('./partials/footer'); -%>