<%- include('./partials/header'); -%>
    <h1><%= title %></h1>    
    <form method='POST' action=''>
        <div class="form-group">
            <label for="first_name">First Name:</label>
            <input type="text" id="first_name" class="form-control" placeholder='First name' name='first_name' required='true' value= <%=(undefined===author ? '' : author.first_name)%> >
        </div>
        <div class="form-group">
            <label for="family_name">Family Name:</label>
            <input type="text" id="family_name" class="form-control" placeholder='Family name' name='family_name' required='true' value= <%= (undefined===author ? '' : author.family_name) %> >
        </div>
        <div class="form-group">
            <label for="date_of_birth">Date of birth:</label>
            <input type="date" id="date_of_birth" class="form-control" name='date_of_birth' value= <%= (undefined===author ? '' : author.date_of_birth) %> >
        </div>
        <div class="form-group">
            <label for="date_of_death">Date of death:</label>
            <input type="date" id="date_of_death" class="form-control" name='date_of_death' value= <%= (undefined===author ? '' : author.date_of_death) %> >
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
    </form>
    <% if (errors) { %>
        <ul>
            <% for (const error of errors) { %>
                <li>
                    <%= error.msg %>
                </li>
            <% } %>
        </ul>
    <% }; %>
<%- include('./partials/footer'); -%>